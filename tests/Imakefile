DEPEND = sh ./depend.sh

# KLEE=/home/lrleon/klee/Release+Asserts/bin
# CLANGCPP=/home/lrleon/LLVM-3.4.2/bin/clang++ -I$(KLEE)/include

INCLUDES = -I../include -I$(ALEPHW) 
WARN= -Wall -Wextra -Wcast-align -Wno-sign-compare -Wno-write-strings\
	-Wno-parentheses
FLAGS = -std=c++14 $(WARN) -O0 -g

OPTIONS = $(FLAGS)
CXXFLAGS= -std=c++14 $(INCLUDES) $(OPTIONS)

# %.ccL %.bc:
# 	$(RM) $@	; 	\	@@\
# 	$(CLANGCPP) $(INCLUDES) $(CXXFLAGS) -emit-llvm -c -g $*.cc

#PVTOBJS=../lib/units.o
PVTOBJS=../lib/lib-vars.o

SYSLIBS = -L$(ALEPHW) -lAleph -lstdc++ -lgsl -lgslcblas -lm -lc

TESTSRCS = test-all-units-1.cc test-conversion.cc test-corr.cc

TESTOBJS = $(TESTSRCS:.cc=.o)

SRCS = $(TESTSRCS)

AllTarget(test-conversion)
NormalProgramTarget(test-conversion,$(PVTOBJS) test-conversion.o,,,$(SYSLIBS))

AllTarget(test-corr)
NormalProgramTarget(test-corr,$(PVTOBJS) test-corr.o,,,$(SYSLIBS))

AllTarget(test-all-units-1)
NormalProgramTarget(test-all-units-1,$(PVTOBJS) test-all-units-1.o,,,$(SYSLIBS))

DependTarget()
