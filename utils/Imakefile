DEPEND = sh ./depend.sh

ALEPHW = $(shell echo $$ALEPHW)
POCO = $(shell echo $$POCO)
CXXPATH = $(shell echo $$CXXPATH)

CC = $(CXXPATH)/bin/clang
CXX = $(CXXPATH)/bin/clang++

INCLUDES = -I$(ALEPHW) -I.
WARN= -Wall -Wextra -Wcast-align -Wno-sign-compare -Wno-write-strings -Wno-parentheses
FLAGS = -std=c++14 $(WARN)

OPTIONS = $(FLAGS)
CXXFLAGS= -std=c++14 $(INCLUDES) $(OPTIONS)

LIBSRCS = utils.cc

LIBOBJS = $(LIBCCCSRCS:.cc=.o)

DEPLIBS = ./libutils.a

LOCALLIBS = ./libutils.a

SYSLIBS = -lstdc++ -lc

SRCS = test-unit.cc

OBJS = $(SRCS:.cc=.o)

NormalLibraryObjectRule()

NormalLibraryTarget(utils,$(LIBOBJS))
InstallLibrary(utils,./)

AllTarget(test-unit)
NormalProgramTarget(test-unit,test-unit.o $(OBJS),$(DEPLIBS),$(LOCALLIBS),$(SYSLIBS))

DependTarget()
